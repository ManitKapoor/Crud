<div class="container-fluid">
<form {{action 'filterByInput' on='submit'}}>
<div class="row">

<div class="col-md-6 col-lg-6">
<ul class="list-group">
  <li class="list-group-item"></li>
</ul>
</div>

<div class="col-md-3 col-lg-3">

</div>

<div class="col-md-3 col-lg-3">
<button type="submit" class='btn btn-success'><span class="glyphicon glyphicon-search"></span></button>
<button class="btn btn-info"  {{ action 'displayall' }}><span class="glyphicon glyphicon-th-list"></span></button>
</div>

</div>
</form>
</div>

<br>
<div class="container-fluid">
  <div class="panel panel-default">
    <div class="panel panel-heading">

      {{!-- {{Page Number}} --}}
      <ul class="pagination">
        {{#if showPrevious}}
          <li><a {{action "previousClicked"}}> prev </a></li>
         {{/if}}
        {{#each pageNumbers as |pageNumber|}}
           {{#if (eq pageNumber 1)}}
           <li id="d{{pageNumber}}" class="active"><a {{action "pageClicked" pageNumber}}>{{pageNumber}}</a></li>
           {{else}}
             <li id="d{{pageNumber}}"><a {{action "pageClicked" pageNumber}}>{{pageNumber}}</a></li>
            {{/if}} 
        {{/each}}
        {{#if showNext}}
          <li><a class="btn btn-default" {{action "nextClicked"}}> next </a></li>
        {{/if}}
      </ul>

    </div>
    <div class="panel panel-body">
       {{display-object meta=metadata Items=paginatedItems}}
    </div>
  </div>
</div>

